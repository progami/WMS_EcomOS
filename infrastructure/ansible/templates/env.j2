# WMS Environment Configuration
# Generated by Ansible - Do not edit directly

# Database
DATABASE_URL="postgresql://{{ db_user }}:{{ db_password }}@{{ db_host | default('localhost') }}:{{ db_port | default('5432') }}/{{ db_name }}"

# Application
NODE_ENV="{{ node_env | default('production') }}"
PORT={{ app_port | default('3000') }}

# Authentication
NEXTAUTH_URL="{{ nextauth_url | default('http://localhost:3000') }}"
NEXTAUTH_SECRET="{{ nextauth_secret }}"

# Demo credentials (if enabled)
{% if enable_demo | default(false) %}
DEMO_ADMIN_PASSWORD="{{ demo_admin_password | default('SecureWarehouse2024!') }}"
DEMO_STAFF_PASSWORD="{{ demo_staff_password | default('DemoStaff2024!') }}"
{% endif %}

# Base path (if configured)
{% if base_path is defined %}
BASE_PATH="{{ base_path }}"
{% endif %}

# Additional environment variables
{% for key, value in additional_env_vars.items() | default({}) %}
{{ key }}="{{ value }}"
{% endfor %}