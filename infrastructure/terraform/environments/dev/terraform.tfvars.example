# Development Environment Configuration Example
# Copy this to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# SSH Configuration
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"
ssh_allowed_ips = [
  "0.0.0.0/0"  # Dev environment - open SSH access for development
]

# Infrastructure Options
instance_type = "t3.micro"
instance_count = 1

# Dev defaults - no ALB/RDS
use_alb = false
use_rds = false

