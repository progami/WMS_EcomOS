# Production Environment Configuration Example
# Copy this to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# SSH Configuration
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"
ssh_allowed_ips = [
  "0.0.0.0/0"  # WARNING: Replace with your actual IP address for security
]

# Infrastructure Options
instance_type = "t3.small"
instance_count = 1

# For production with high availability:
# use_alb = true
# use_rds = true
# instance_count = 2
# rds_instance_class = "db.t3.small"
# ssl_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/..."

