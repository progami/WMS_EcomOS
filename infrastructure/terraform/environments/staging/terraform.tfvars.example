# Staging Environment Configuration Example
# Copy this to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# SSH Configuration
public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQC... your-public-key-here"
ssh_allowed_ips = [
  "0.0.0.0/0"  # WARNING: Replace with your actual IP address for security
]

# Infrastructure Options
instance_type = "t3.micro"
instance_count = 1

# Staging defaults - no ALB/RDS
use_alb = false
use_rds = false

