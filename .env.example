# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/warehouse_db"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Environment
NODE_ENV="development"

# Amazon Seller API Configuration (Required for Amazon integration)
AMAZON_SP_APP_ID="your-amazon-sp-app-id"
AMAZON_REFRESH_TOKEN="your-amazon-refresh-token"
AMAZON_MARKETPLACE_ID="A1F83G8C2ARO7P"  # UK marketplace
AMAZON_REGION="eu-west-1"  # Europe region

# Amazon SP-API Client Credentials (Required for API authentication)
AMAZON_SP_APP_CLIENT_ID="your-amazon-sp-api-client-id"
AMAZON_SP_APP_CLIENT_SECRET="your-amazon-sp-api-client-secret"

# Google Maps API Key (Optional - for warehouse location map)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"